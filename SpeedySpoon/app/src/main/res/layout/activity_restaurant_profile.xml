<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        app:title="@string/restaurant_profile"
        app:titleTextColor="@color/white"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/save_button">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_medium">

            <!-- Étterem kép -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="@dimen/spacing_medium"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation">

                <ImageView
                    android:id="@+id/restaurant_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/restaurant_profile"
                    tools:src="@tools:sample/backgrounds/scenic" />

                <Button
                    android:id="@+id/change_image_button"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_image"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="@dimen/spacing_medium"
                    android:backgroundTint="@color/primary" />
            </androidx.cardview.widget.CardView>

            <!-- Alapadatok -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/restaurant_name_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/restaurant_name"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/restaurant_description_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/restaurant_description"
                    android:inputType="textMultiLine"
                    android:minLines="3" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/restaurant_category_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/restaurant_category"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Elérhetőségek -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Elérhetőségek"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:layout_marginTop="@dimen/spacing_medium"
                android:layout_marginBottom="@dimen/spacing_medium" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/restaurant_address_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/restaurant_address"
                    android:inputType="textPostalAddress" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/restaurant_phone_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/restaurant_phone"
                    android:inputType="phone" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/restaurant_email_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/restaurant_email"
                    android:inputType="textEmailAddress" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/restaurant_website_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/restaurant_website"
                    android:inputType="textUri" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Nyitvatartás -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/restaurant_opening_hours"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:layout_marginTop="@dimen/spacing_medium"
                android:layout_marginBottom="@dimen/spacing_medium" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/spacing_medium">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_small">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/monday"
                            android:textColor="@color/textPrimary" />

                        <EditText
                            android:id="@+id/monday_open"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="10:00"
                            android:inputType="time"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" - "
                            android:textColor="@color/textPrimary" />

                        <EditText
                            android:id="@+id/monday_close"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="22:00"
                            android:inputType="time"
                            android:textSize="14sp" />

                        <CheckBox
                            android:id="@+id/monday_closed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/closed" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_small">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/tuesday"
                            android:textColor="@color/textPrimary" />

                        <EditText
                            android:id="@+id/tuesday_open"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="10:00"
                            android:inputType="time"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" - "
                            android:textColor="@color/textPrimary" />

                        <EditText
                            android:id="@+id/tuesday_close"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="22:00"
                            android:inputType="time"
                            android:textSize="14sp" />

                        <CheckBox
                            android:id="@+id/tuesday_closed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/closed" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_small">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/wednesday"
                            android:textColor="@color/textPrimary" />

                        <EditText
                            android:id="@+id/wednesday_open"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="10:00"
                            android:inputType="time"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" - "
                            android:textColor="@color/textPrimary" />

                        <EditText
                            android:id="@+id/wednesday_close"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="22:00"
                            android:inputType="time"
                            android:textSize="14sp" />

                        <CheckBox
                            android:id="@+id/wednesday_closed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/closed" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_small">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/thursday"
                            android:textColor="@color/textPrimary" />

                        <EditText
                            android:id="@+id/thursday_open"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="10:00"
                            android:inputType="time"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" - "
                            android:textColor="@color/textPrimary" />

                        <EditText
                            android:id="@+id/thursday_close"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="22:00"
                            android:inputType="time"
                            android:textSize="14sp" />

                        <CheckBox
                            android:id="@+id/thursday_closed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/closed" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_small">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/friday"
                            android:textColor="@color/textPrimary" />

                        <EditText
                            android:id="@+id/friday_open"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="10:00"
                            android:inputType="time"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" - "
                            android:textColor="@color/textPrimary" />

                        <EditText
                            android:id="@+id/friday_close"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="22:00"
                            android:inputType="time"
                            android:textSize="14sp" />

                        <CheckBox
                            android:id="@+id/friday_closed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/closed" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_small">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/saturday"
                            android:textColor="@color/textPrimary" />

                        <EditText
                            android:id="@+id/saturday_open"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="10:00"
                            android:inputType="time"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" - "
                            android:textColor="@color/textPrimary" />

                        <EditText
                            android:id="@+id/saturday_close"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="22:00"
                            android:inputType="time"
                            android:textSize="14sp" />

                        <CheckBox
                            android:id="@+id/saturday_closed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/closed" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_small">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/sunday"
                            android:textColor="@color/textPrimary" />

                        <EditText
                            android:id="@+id/sunday_open"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="10:00"
                            android:inputType="time"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" - "
                            android:textColor="@color/textPrimary" />

                        <EditText
                            android:id="@+id/sunday_close"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="22:00"
                            android:inputType="time"
                            android:textSize="14sp" />

                        <CheckBox
                            android:id="@+id/sunday_closed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/closed" />
                    </TableRow>

                </TableLayout>
            </androidx.cardview.widget.CardView>

            <!-- Rendelési beállítások -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Rendelési beállítások"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:layout_marginTop="@dimen/spacing_medium"
                android:layout_marginBottom="@dimen/spacing_medium" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/min_order_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/min_order_amount"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_medium"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/delivery_fee_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/delivery_fee"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/estimated_delivery_time"
                android:textSize="16sp"
                android:textColor="@color/textPrimary"
                android:layout_marginBottom="@dimen/spacing_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/spacing_medium">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/spacing_small"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/min_time_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/min_time"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/spacing_small"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/max_time_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/max_time"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/save_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:text="@string/save_changes"
        android:layout_margin="@dimen/spacing_medium"
        app:backgroundTint="@color/primary"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        app:menu="@menu/restaurant_bottom_navigation_menu"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
