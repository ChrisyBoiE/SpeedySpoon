<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>

        <!-- Gomb színek beállítása -->
        <item name="colorButtonNormal">@color/primary</item>
        <item name="colorControlHighlight">@color/primaryDark</item>
        <item name="materialButtonStyle">@style/AppTheme.Button</item>
    </style>

    <style name="Title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>

    <style name="Subtitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Body">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
</resources>
